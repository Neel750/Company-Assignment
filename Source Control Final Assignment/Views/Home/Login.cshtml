@model Source_Control_Final_Assignment.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.EnableClientValidation(true);
}

<h2 style="padding-top:30px;">Login</h2>


@using (Html.BeginForm("Verify", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.uname, htmlAttributes: new { @class = "col-form-label col-lg-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.uname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("uname", "Please Enter Username.", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "col-form-label col-lg-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })<br />
                @Html.ValidationMessage("password", "Please Enter Password.", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div class="text-danger">
        @Html.ValidationSummary(false, "Enter valid data then login.")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
