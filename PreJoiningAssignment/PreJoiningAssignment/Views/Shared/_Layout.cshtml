<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/VerticalMenu.css" rel="stylesheet" />
    <style>
        body {
            padding: 0 !important;
        }

        .list-group {
            padding-top: 20px;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                @Html.ActionLink("Product Management", "Index", "PMS", new { area = "" }, new { @class = "navbar-brand navbar-link" })
            </div>
            <div class="list-group list-group-flush">
                @Html.ActionLink("Dashboard", "Index", "PMS", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                @Html.ActionLink("Add Product", "AddProduct", "PMS", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                @Html.ActionLink("View Products", "Products", "PMS", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
                @Html.ActionLink("Delete Products", "DeleteMultipleProducts", "PMS", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar bg-light border-bottom">
                @Html.ActionLink("Product Management", "Index", "PMS", new { area = "" }, new { @class = "navbar-brand navbar-link" })
                <div style="float:right;">
                    <button class="btn">
                        @Html.ActionLink("Logout", "Logout", "PMS", new { area = "" }, new { @class = "navbar-brand navbar-link" })
                    </button>
                </div>
            </nav>
            <div class="container body-content">
                @RenderBody()

            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
