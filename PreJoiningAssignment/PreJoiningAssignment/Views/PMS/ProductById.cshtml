@model PMS.Model.ProductData

@{
    ViewBag.Title = "ProductById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        margin: 15px;
        font-weight: 500;
    }

    .bold {
        text-align: left;
    }
</style>

<div class="container-fluid">
    <div class="card">
        <div class="card-body shadow">
            <div class="d-flex flex-column text-center">
                <div class="card-title">
                    <h1>@Html.DisplayFor(model => model.ProductName)</h1>
                </div>
                <img src="@Url.Content(Model.LongImage.ToString())" alt=@Html.DisplayNameFor(model => model.LongImage) height="500">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.ProductID) :</td>
                            <td class="bold">@Html.DisplayFor(model => model.ProductID)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Category) :</td>
                            <td class="bold">@Html.DisplayFor(model => model.Category)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.LongDescription) :</td>
                            <td class="bold">@Html.DisplayFor(model => model.LongDescription)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Tags) :</td>
                            <td class="bold">@Html.DisplayFor(model => model.Tags)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Price) :</td>
                            <td class="bold">@Html.DisplayFor(model => model.Price)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Quantity) :</td>
                            <td class="bold">@Html.DisplayFor(model => model.Quantity)</td>
                        </tr>
                    </tbody>
                </table>
                <button class="btn btn-outline-primary">
                    @Html.ActionLink("Back", "Products", "PMS", new { area = "" }, new { @class = "navbar-item" })
                </button>
            </div>
        </div>
    </div>
</div>
