@using PagedList
@using PagedList.Mvc
@model IPagedList<PMS.Model.ProductData>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .pagination-container > ul {
        display: block;
        margin: 0;
        padding: 0;
        list-style: none;
    }

        .pagination-container > ul > li {
            margin: .25em;
            display: inline-block;
        }

    .pagination-container > fieldset {
        border: 0;
    }

    .card {
        margin: 15px;
        width: 400px !important;
    }

    .card-body {
        padding: 10px;
        border: 1px solid Black;
        max-width: 400px !important;
    }

    .btn-padding {
        padding: 5px;
    }

    .shortDescription {
        width: 300px;
    }

    .searchBar {
        padding: 5px;
    }
</style>

<div class="searchBar">
    <form action="/PMS/Products" method="get">
        <div class="form-check-inline">
            <label class="col-form-label">
                Search By :
            </label>
        </div>
        <div class="form-check-inline">
            <label class="col-form-label">
                <input type="radio" class="form-check-input" name="searchBy" value="Name" />Name
            </label>
        </div>
        <div class="form-check-inline">
            <label class="col-form-label">
                <input type="radio" class="form-check-input" name="searchBy" value="Category" />Category
            </label>
        </div>
        <div class="form-check-inline">
            <label class="col-form-label">
                <input type="radio" class="form-check-input" name="searchBy" value="Tag" />Tags
            </label>
        </div>
        <div class="form-check-inline ml-auto">
            <div class="md-form my-0">
                <input class="form-control" type="text" placeholder="Search Text" aria-label="Search" name="search">
            </div>
            <input type="submit" class="btn btn-outline-primary btn-md my-0 ml-sm-2" value="Search" />
        </div>
        <div class="form-check-inline">
            <label class="col-form-label">
                Sort By :
            </label>
        </div>
        <div class="form-check-inline ml-auto">
            <button class="btn btn-link">
                @Html.ActionLink("Name", "Products", new { Sorting_Order = ViewBag.SortingName, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"] })
            </button>
        </div>
        <div class="form-check-inline ml-auto">
            <button class="btn btn-link">
                @Html.ActionLink("Price", "Products", new { Sorting_Order = ViewBag.SortingPrice, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"] })
            </button>
        </div>
    </form>
</div>

<div class="row gutters-sm">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-body shadow">
                <img src="@Url.Content(item.SmallImage.ToString())" alt=@item.SmallImage width="380" height="300">
                <div class="d-flex flex-column align-items-center">
                    <div class="mt-3">
                        <h4 class="text-center">@item.ProductName</h4>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.First().Category) :
                                    </td>
                                    <td>
                                        @item.Category
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.First().Price) :
                                    </td>
                                    <td>
                                        <span>&#8377;</span> @item.Price
                                    </td>
                                </tr>
                                <tr>
                                    <td class="shortDescription" colspan="2" rowspan="4">
                                        @item.SmallDescription
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btn-padding">
                            <input type="button" value="View" onclick="location.href='@Url.Action("ProductById", "PMS")?id=' + @item.ProductID" class="btn btn-primary" />
                            <input type="button" value="Edit" onclick="location.href='@Url.Action("UpdateProduct", "PMS")?id=' + @item.ProductID" class="btn btn-primary" />
                            <input type="button" value="Delete" onclick="location.href='@Url.Action("DeleteProduct", "PMS")?id=' + @item.ProductID" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("/Products", new { page, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"] }))